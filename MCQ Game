//Making a MCQ Game using 2D Array in C++

#include <iostream>

int main(){

    std::string questions[] = {"1. Which insect have 8 legs? : ",                                             
                               "2. Name the person with highest subs on YT? : ",
                               "3. What is the color of Apple when it's still Growing? : ",
                               "4. What's that which starts with 'N' and ends with a 'r'? : "};
    
    std::string options[][4] = {{"A. Ant","B. Spider","C. Bettle","D. Honey Bee"},                              
                                {"A. Mr Beast", "B. MythBusters", "C. David Goggins", "D. Carry Minarti"},
                                {"A. Blue","B. Red","C. Green","D. Pink"},
                                {"A. Namer","B. Near","C. Noicer","D. Ni**er"}};
                                
    char answerKey[] = {'B','A','C','D'};                                                                  


    int questionSize = sizeof(questions)/sizeof(questions[0]);                                                 
    int optionsSize = sizeof(options[0])/sizeof(options[0][0]);                                                
    
    char guess;                                                                                                 
    int score=0;        

    for(int i=0; i<questionSize; i++){                                                                              
        std::cout<<"*************************\n";
        std::cout<<questions[i]<<"\n";                                                                          
        std::cout<<"*************************\n";
        
        for(int j=0; j<optionsSize; j++){                                                                       
            std::cout << options[i][j] <<'\n'; }                                                                 
        
        std::cout<<"\nEnter Your Guess : ";
        std::cin>>guess;
        guess=toupper(guess);                                                                                   
 
        if(guess == answerKey[i]){                                                                            
            std::cout <<"\nCorrect\n\n";
            score++;}        
        else{
            std::cout << "Wrong !\n\n";
            std::cout << "Answer was: " <<answerKey[i] << "\n\n";}     
    }                                                                                                           
    
    std::cout<<"\n"<<"Total Questions: "<<questionSize<<"\n" ;                                                  
    std::cout<<"Correct: "<<score<<'\n';
    std::cout<<"Percentage : "<< (score/double(questionSize))*100 <<"%\n\n";         
    
}